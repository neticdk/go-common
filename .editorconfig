root = true

[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8
indent_size = 4
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{htm,html,js,ts,tsx,css,sass,scss,less,svg,vue,json,yml,yaml}]
indent_size = 2


[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
tab_width = 4
max_line_length = 0
